<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
  <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
          android:background="#ececec"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/homepage_text_size_three" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="筛选"
            android:textColor="@color/black"
            android:textSize="@dimen/homepage_text_size_three" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="确定"
            android:textColor="#1cce84"
            android:textSize="@dimen/homepage_text_size_three" />
    </LinearLayout>
<View  android:layout_height="5dp"
        android:layout_width="fill_parent"
         android:background="#ececec"
        />
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/destinationLayout"
          android:paddingLeft="10dp"
            android:paddingRight="5dp"
             android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="目的地"
            android:id="@+id/text1"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/homepage_text_size_three" />

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout>
<View  android:layout_height="0.5dp"
        android:layout_width="fill_parent"
         android:background="#ececec"
        />
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/priceLayout"
          android:paddingLeft="10dp"
            android:paddingRight="5dp"
             android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="价格"
             android:id="@+id/text2"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/homepage_text_size_three" />

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout>
    <View  android:layout_height="0.5dp"
        android:layout_width="fill_parent"
         android:background="#ececec"
        />
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/daysLayout"
          android:paddingLeft="10dp"
            android:paddingRight="5dp"
             android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="天数"
             android:id="@+id/text3"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/homepage_text_size_three" />

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" />
    </LinearLayout></LinearLayout></ScrollView>
</LinearLayout>