<?xml version="1.0" encoding="utf-8"?>
<!-- 定义一个水平方向的相对布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e8e8e8">
    <RelativeLayout
        android:id="@+id/second_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="fill_parent"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/back_button_height"
                android:layout_height="@dimen/back_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/nav_back"
                android:gravity="center" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/second_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:layout_toRightOf="@id/layout_back_button"
            android:gravity="center"
            android:singleLine="true"
            android:text="二级标题"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/user_info_button"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:visibility="gone"
            android:src="@drawable/nav_user" />
    </RelativeLayout>

 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/verifyLayout"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证信息"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                >
 <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/idVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_centerVertical="true"
                        android:src="@drawable/id" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="身份已认证"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/homepage_text_size_four" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phoneVerify"
                     android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/idVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_centerVertical="true"
                        android:src="@drawable/phone" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="手机已认证"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/homepage_text_size_four" />
                </LinearLayout>
</LinearLayout>
                <LinearLayout
                    android:id="@+id/emailVerify"
                    android:layout_below="@id/idVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_centerVertical="true"
                        android:src="@drawable/email" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="邮箱已认证"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/homepage_text_size_four" />
                </LinearLayout>
            </LinearLayout>
            
            </LinearLayout>
            
            

          

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                                android:layout_marginTop="10dp"
                
                android:orientation="horizontal"
                android:id="@+id/workTimeLinear"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="居住地"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="中国四川成都"
                    android:id="@+id/adress"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />
            </LinearLayout>
          
            <LinearLayout
                                android:layout_marginTop="10dp"
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:id="@+id/languageLinear"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长语言"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="中文，英语，方言"
                    android:id="@+id/language"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_border"
                android:orientation="horizontal" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务区域"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/serviceArieaFlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_border"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务内容"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/homepage_text_size_three" />

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/serviceContentFlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp" />
            </LinearLayout>


</LinearLayout>