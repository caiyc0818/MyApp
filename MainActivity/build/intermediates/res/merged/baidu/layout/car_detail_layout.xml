<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_car_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="奔驰GLA"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_servalia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="mercedes-bens"
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/car_photo"
        android:layout_width="fill_parent"
        android:layout_height="160dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerCrop" />

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/car_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:lineSpacingExtra="5dip"
        android:text="洛杉矶国际影城"
        android:textColor="@color/gray_more"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/price" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="价格"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="￥220"
            android:textColor="@color/dark_pink"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="(资源价格)"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/pinpai" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="品牌名"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="奔驰"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo3"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/licheng" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="行驶里程"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="4万公里"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo4"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/leibie" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="类型"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="SUV"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>
    
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo5"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/zuowei" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="座位数"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_seatNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="2013"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo6"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/houbeixiang" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="后备箱容量"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
             android:id="@+id/car_logo7"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/time" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="购车时间"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_buyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="2013"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>


    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="centerInside"
            android:src="@drawable/chuchangguo" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="出产国"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/car_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="NY45290"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="车内配套"
        android:textColor="@color/dark_gray"
        android:textSize="16sp" />

    <com.bcinfo.tripaway.view.MyGridView
        android:id="@+id/car_equipment_gv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10dp" >
    </com.bcinfo.tripaway.view.MyGridView>

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="费用范围"
        android:textColor="@color/dark_gray"
        android:textSize="16sp" />

    <com.bcinfo.tripaway.view.MyGridView
        android:id="@+id/car_fee_gv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10dp" >
    </com.bcinfo.tripaway.view.MyGridView>

    <com.bcinfo.tripaway.view.MyListView
        android:id="@+id/car_detail_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/transparent"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent"
        android:scrollbars="none" >
    </com.bcinfo.tripaway.view.MyListView>

</LinearLayout>