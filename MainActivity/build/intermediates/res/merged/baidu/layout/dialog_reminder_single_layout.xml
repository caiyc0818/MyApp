<?xml version="1.0" encoding="utf-8"?>
<!-- 手机找回密码  对话框   布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_setting_dialog_normal"
    android:orientation="vertical" >

    <!-- 对话框主题内容 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp" >

        <!-- 文本框 显示发送信息 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/dialog_reminder_single_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="false"
            android:text="@string/dialog_findPwdByPhone_text"
            android:textColor="@color/shadow_gray"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- 灰色的分隔线 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_search_time_vertical_line" />

    <LinearLayout
        android:id="@+id/dialog_reminder_single_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp" >

        <!-- 文本框  确定 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setting_exit_dialog_positive"
            android:textColor="@color/shadow_gray"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>