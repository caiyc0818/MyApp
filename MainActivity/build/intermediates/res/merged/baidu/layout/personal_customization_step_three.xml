<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者端-个人定制第一步布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg" 
    android:gravity="center_horizontal"
    android:orientation="vertical" >
 <RelativeLayout
        android:id="@+id/second_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="fill_parent"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/back_button_height"
                android:layout_height="@dimen/back_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/nav_back" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/second_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:layout_toRightOf="@id/layout_back_button"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的定制需求"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:id="@+id/center_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:orientation="vertical"
            android:visibility="gone" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/center_title_text_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size_small" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/center_title_text_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:text="2015-06-10"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size_small_more" />
        </LinearLayout>

         <Button
    		android:id="@+id/nextStep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="确认"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textColor="#BEE5D0"
        android:background="@null"
        android:textSize="16sp" >
    </Button>
    </RelativeLayout>
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="联系人姓名"
        android:textColor="@color/dark_gray"
        android:textSize="15sp" />
    <EditText
            android:id="@+id/name"
             android:layout_width="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_logreg_cell_normal"
            android:hint="请输入联系人真实姓名"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />

    
    
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="联系人手机号"
        android:textColor="@color/dark_gray"
        android:textSize="15sp" />
    <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_logreg_cell_normal"
            android:hint="请输入联系人有效的手机号码"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
             android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="邮箱地址"
        android:textColor="@color/dark_gray"
        android:textSize="15sp" />
    <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_logreg_cell_normal"
            android:hint="请输入有效的邮箱地址"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
              android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />
 

</LinearLayout>