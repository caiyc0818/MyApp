<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
     >

     <RelativeLayout
        android:id="@+id/layout_product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/back_button_height"
                android:layout_height="@dimen/back_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/nav_back"
                android:gravity="center" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.TextView1
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="我的出行单"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>
        <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
         >

      <RelativeLayout
        android:id="@+id/bbs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/title_bg" >

        <View 
            android:layout_height="7dp"
            android:layout_centerHorizontal="true"
            android:layout_width="330dp"
            android:id="@+id/mdor"
            android:background="@drawable/shape_sjc"
            />
       
    </RelativeLayout>

    <com.bcinfo.tripaway.view.refreshandload.XListView 
      android:id="@+id/select_dialog_listview"
      android:layout_width="320dp"
      android:scrollbars="none"
      android:listSelector="@color/transparent"
      android:layout_height="wrap_content"
      android:fadingEdge="none"
      android:layout_centerHorizontal="true"
      android:clipToPadding="false"
      android:layout_marginTop="3.5dp"
      android:dividerHeight="1dp"
       android:overScrollMode="never"
       android:background="@color/transparent"
      android:divider="@color/transparent"
       />
       <RelativeLayout 
           android:visibility="gone"
         android:layout_width="320dp"
      android:layout_height="wrap_content"
       android:layout_marginTop="3.5dp"
      android:id="@+id/zwcx"
      android:background="@drawable/really2"
      android:layout_centerHorizontal="true"
       >
        <ImageView 
            android:layout_height="120dp"
           
            android:layout_width="120dp"
             android:layout_centerHorizontal="true"
             
            android:background="@drawable/zwcxd"
            />
        </RelativeLayout>
    </RelativeLayout>
  


</LinearLayout>