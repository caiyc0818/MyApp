<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者发布的产品列表item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <!-- 相对布局 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >

        <!-- 左边-服务者产品图片 -->

        <com.bcinfo.tripaway.view.image.RoundImageView
            android:id="@+id/club_icon_iv"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerVertical="true"
            android:src="@drawable/user_defult_photo" />
        <!-- 右边-产品名称 简介 -->

        <RelativeLayout
            android:id="@+id/layout_product_servicer_introduct_container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
         android:layout_centerVertical="true"
            android:layout_toRightOf="@id/club_icon_iv"
            android:orientation="vertical" >

            <!-- 服务者个人产品标题 -->

            <RelativeLayout
                android:id="@+id/product_servicer_introduct__title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/focous"
                    android:text="川藏老兵俱乐部"
                    android:textColor="@color/shadow_black"
                    android:textSize="17sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/focous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_focous_bg"
                    android:singleLine="true"
                    android:text="已关注"
                    android:textColor="#b5b5b5"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/club_member_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_servicer_introduct__title_tv"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="司机"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/driver_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="500"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/shadow_gray"
                    android:singleLine="true"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="导游"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/guide_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="50"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/shadow_gray"
                    android:singleLine="true"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="产品"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/product_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="500"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/line3"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/shadow_gray"
                    android:singleLine="true"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/funs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="粉丝"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:singleLine="true"
                        android:text="500"
                        android:textColor="@color/shadow_gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 产品说明 简介 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/club_member_layout"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="简介：阿姆斯特丹是荷兰的首都,荷兰的最大城市和第二大港口。阿姆斯特丹是一座地势低于500平方米的"
                    android:textColor="@color/shadow_gray"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>