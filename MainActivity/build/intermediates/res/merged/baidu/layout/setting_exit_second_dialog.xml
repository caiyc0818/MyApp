<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义 "确认退出"对话框 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 线性布局 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <!-- 文本框  显示"是否确认退出？"字样 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/setting_exit_yesOrNo"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- 分隔线 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_trip_blog_publish_separate_line" />
    <!-- 线性布局 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <!-- 确定 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/setting_exit_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_exit_dialog_positive"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <!-- 分隔条 -->

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_trip_blog_publish_separate_line" />
        <!-- 取消 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/setting_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_exit_dialog_negative"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>