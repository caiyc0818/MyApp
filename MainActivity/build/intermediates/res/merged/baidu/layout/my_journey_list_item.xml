<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="13dip"
        >
    <com.bcinfo.tripaway.view.textview.NormalTfTextView 
            android:id="@+id/product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:text="1234"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            />
       <com.bcinfo.tripaway.view.textview.NormalTfTextView 
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:text="1234"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            /> 
</RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >
        <com.bcinfo.tripaway.view.image.RoundImageView
            android:id="@+id/product_author"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_defult_photo" />
        
        <com.bcinfo.tripaway.view.textview.NormalTfTextView 
            android:id="@+id/product_author_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/level"
            android:layout_centerVertical="true"
            android:textColor="@color/dark_gray"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/product_author"
            />
        
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/produce_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/produce_price"
            android:background="@drawable/red_circle_corn_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="严格"
            android:textColor="@color/white"
            android:textSize="10sp" />
        
    </RelativeLayout>
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_width"
        android:background="@color/gray_border" 
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/product_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textSize="16sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/product_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_width"
        android:layout_marginTop="10dp"
        android:background="@color/gray_border" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/tv_trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅行周期："
            android:textColor="#666666"
            android:textSize="14sp" />
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_trip_time"
            android:text="2015/05/02-2015/05/12"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
         >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/tv_trip_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="旅行状态："
            android:textColor="#666666"
            android:textSize="14sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/trip_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_trip_state"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />

		<Button 
		    android:id="@+id/del_myjour_order"
		    android:text="删除订单"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:textSize="12sp"
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="30dp"
		    android:textColor="#333333"
		    android:background="@drawable/gray_border_bg"
		     android:visibility="gone"
		     android:focusable="false"
		    />
		
		<Button 
		    android:id="@+id/comment_myjour_order"
		    android:text="评价"
		     android:textSize="12sp"
		    android:focusable="false"
		    android:layout_toLeftOf="@id/del_myjour_order"
		    android:layout_marginRight="5dip"
		     android:textColor="#333333"
		    android:layout_width="60dp"
		    android:layout_height="30dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:background="@drawable/gray_border_bg"
		    android:visibility="gone"
		    />

    </RelativeLayout>
</LinearLayout>