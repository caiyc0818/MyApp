<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <include
        android:id="@+id/second_title"
        layout="@layout/second_title_bar" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  > 
    
  
       
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp"
   android:id="@+id/ask"
   android:layout_alignParentBottom="true"
    android:background="@color/white"
  > 
 <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_centerInParent="true"
  >
  <ImageView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/to_help"/>
   <com.bcinfo.tripaway.view.textview.NormalTfTextView android:layout_width="wrap_content"
       android:layout_marginLeft="3dp"
    android:layout_height="wrap_content"
    android:textColor="@color/gray_more"
    android:text="沒有想要的问题？我要咨询"/>
 
 </LinearLayout>
  </RelativeLayout>
  <ListView
                        android:id="@+id/consult_listview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@color/transparent"
                        android:dividerHeight="1px"
                        android:listSelector="@color/transparent"
                        android:layout_above="@id/ask"
                        android:scrollbars="none" >
                    </ListView>

  </RelativeLayout>
</LinearLayout>