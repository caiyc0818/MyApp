<?xml version="1.0" encoding="utf-8"?>
<!-- 个人主页-更多-过往记录item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_personal_more_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
   <!-- 左边的圆形标志  icon-->
   <LinearLayout 
       android:id="@+id/layout_item_personal_more_time_container"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/white"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:gravity="center_horizontal"
       >
       <!-- 圆形 icon -->
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:scaleType="center"
           android:background="@drawable/green_circle"
           />
       <!-- 竖线 -->
       <View 
           android:layout_width="@dimen/border_width"
           android:layout_height="match_parent"
           android:background="@color/gray_border"
           />
   </LinearLayout>
   <!-- 右边的过往记录 -->
   <RelativeLayout 
       android:id="@+id/layout_item_personal_more_record_content_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/color_search_condition"
       android:paddingTop="10dp"
       android:paddingLeft="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="15dp"
       >
      
       <!-- 旅行经历 -内容 -->
       <com.bcinfo.tripaway.view.textview.NormalTfTextView 
           android:id="@+id/personal_more_experience_content_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:singleLine="false"
           android:text="大皇宫也叫大王宫,泰王室规模最大的宫殿建筑群,汇集了泰国建筑,装饰大皇宫也叫大王宫,途径此处的游客纷纷赞不绝口。"
           android:textColor="@color/gray"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
           android:textSize="@dimen/comment_user_name_size"
           />
       <!-- 旅行经历-照片 -->
       <LinearLayout 
           android:id="@+id/layout_personal_more_experience_photo_container"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/personal_more_experience_content_tv"
           android:layout_alignLeft="@id/personal_more_experience_content_tv"
           android:layout_marginTop="2dp"
           android:orientation="horizontal"
           >
        </LinearLayout>
   </RelativeLayout>
</LinearLayout>
