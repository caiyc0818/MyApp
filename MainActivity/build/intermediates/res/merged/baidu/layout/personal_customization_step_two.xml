<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者端-个人定制第一步布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
<include layout="@layout/second_title_bar" />
<ScrollView 
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="行程安排"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/prsonal_customization_text_size_big" />

    <RadioGroup
        android:id="@+id/trip_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/more"
                android:background="@drawable/trip1"
                android:checked="true"
                android:button="@null" >
            </RadioButton>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧凑些"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多玩些景点"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/trip3"
                 android:id="@+id/less"
                
                android:button="@null" >
            </RadioButton>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宽松"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休闲为主"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/trip2"
                 android:id="@+id/little"
                android:button="@null" >
            </RadioButton>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适中"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不要太赶"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/trip4"
                                 android:id="@+id/all"
                
                android:button="@null" >
            </RadioButton>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="都可以"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只要玩的嗨就好"
                android:textColor="@color/gray_text"
                android:textSize="11sp" />
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
         android:paddingBottom="10dp">

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="人均预算（元）"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/prsonal_customization_text_size_big" />
           <com.bcinfo.tripaway.view.wheelview.WheelView
            android:id="@+id/wheel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

   <RelativeLayout  android:layout_width="match_parent"
       android:background="@color/white"
        android:layout_height="match_parent">
           <Button
       android:id="@+id/nextStep"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_little"
        android:text="继续下一步"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/prsonal_customization_text_size_big" >
    </Button>
    </RelativeLayout>
</LinearLayout></ScrollView>
</LinearLayout>