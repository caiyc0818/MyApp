<?xml version="1.0" encoding="utf-8"?>
<!-- 目的地  列表item -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal" >

    <!--
        <FrameLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >
    -->


    <!-- 目的地   国旗 -->

    <ImageView
        android:id="@+id/item_location_flag_iv"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/summer" />
    <!-- 目的地 中文名字   英文名字 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000" />

    <!-- 中文名字 -->

    <LinearLayout 
        android:id="@+id/item_location_name_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp	"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/subject_icon"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/subject_icon"
            android:visibility="gone" />

        <com.bcinfo.tripaway.view.textview.MoreBoldTfTextView
            android:id="@+id/item_location_zhCNname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美国"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <!-- 英文名字 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/item_location_enUSname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <!-- 关键字 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/item_location_keywords_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>