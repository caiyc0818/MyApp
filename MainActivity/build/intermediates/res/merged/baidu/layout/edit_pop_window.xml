<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_item1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/item1_logo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_edit" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/item1_function"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/bootom_button_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_border" />

    <LinearLayout
        android:id="@+id/layout_item2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/item2_logo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="centerInside"
            android:src="@drawable/set_qchc" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/item2_function"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/bootom_button_size" />
    </LinearLayout>

</LinearLayout>