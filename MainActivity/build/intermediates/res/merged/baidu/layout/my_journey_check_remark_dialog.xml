<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/my_journey_remak_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:gravity="left|top"
        android:minHeight="150dip"
        android:text="Y53298"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/dialog_content_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_operation_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_journey_remak_text"
        android:layout_margin="20dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/my_journey_change_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_green"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="@dimen/commit_button_size" />

        <Button
            android:id="@+id/my_journey_cancel_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:background="@drawable/btn_bg_gray"
            android:text="取消"
            android:textColor="@color/gray_more"
            android:textSize="@dimen/commit_button_size" />
    </LinearLayout>

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_width"
        android:layout_below="@id/layout_operation_button" />

</RelativeLayout>