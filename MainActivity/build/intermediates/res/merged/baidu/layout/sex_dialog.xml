<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="性别"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/title_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_trip_blog_publish_separate_line" />

        <RelativeLayout
            android:id="@+id/man_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/man_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/title_size" />

            <ImageView
                android:id="@+id/man_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_no" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/woman_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/woman_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="女"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/title_size" />

            <ImageView
                android:id="@+id/woman_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_no" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>