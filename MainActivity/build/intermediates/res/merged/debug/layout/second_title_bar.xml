<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/second_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_bg" >

    <LinearLayout
        android:id="@+id/layout_back_button"
        android:layout_width="@dimen/title_height"
        android:layout_height="fill_parent"
        android:background="@drawable/button_selector_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/back_button_height"
            android:layout_height="@dimen/back_button_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/nav_back" />
    </LinearLayout>

    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/second_title_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="54dp"
        android:layout_toRightOf="@id/layout_back_button"
        android:gravity="center"
        android:singleLine="true"
        android:text="二级标题"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:id="@+id/center_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/center_title_text_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size_small" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/center_title_text_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="2015-06-10"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size_small_more" />
    </LinearLayout>
<LinearLayout
        android:id="@+id/second_title_right_line"
        android:layout_width="@dimen/title_height"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_selector_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/second_title_right_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
          
            android:visibility="visible" />
    </LinearLayout>
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/event_commit_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_selector_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/release_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:background="@drawable/microtravel1"
        android:visibility="gone" />
<ImageView
            android:id="@+id/product_service_share_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector_bg"
            android:padding="13dip"
            android:visibility="gone"
            android:src="@drawable/product_detail_share" />
</RelativeLayout>