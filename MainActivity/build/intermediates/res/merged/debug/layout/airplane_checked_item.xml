<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/air_selected_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/air_selected_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:background="@drawable/checkbox_state"
            android:button="@null"
            android:checked="true"
            android:text="" />

        <ImageView
            android:id="@+id/air_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/airporticon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_seleceted_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美国联合航空CA1848"
                android:textColor="@color/black" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约4小时" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/air_selected_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:text="¥3756"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView 
            android:id="@+id/air_selected_deleteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
 			android:layout_marginLeft="5dp"
            android:src="@drawable/comfire_del"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_startaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京禄口机场T2"
                android:textColor="@color/black" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_startaddren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="NKG" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="14:00"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_endaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洛杉矶机场T2"
                android:textColor="@color/black" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_endaddren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="PEK" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/air_selected_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="18:00"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>