<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_separate_view_color"
    android:orientation="vertical" >
    <include
        android:id="@+id/second_title"
        layout="@layout/second_title_bar" />
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:background="@color/white">
	    <EditText 
	        android:id="@+id/info_edt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:minHeight="60dp"
	        android:background="@null"
	        android:textColor="@color/dark_gray"
	        android:layout_toLeftOf="@+id/limit_tip"
	        android:maxLength="30"
	        android:hint="请输入"
	        android:textSize="@dimen/detail_content_title_size"/>
	    <com.bcinfo.tripaway.view.textview.NormalTfTextView 
	        android:id="@+id/limit_tip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="30字"
	        android:textColor="@color/gray"
	        android:layout_alignBaseline="@+id/info_edt"
	        android:textSize="16sp"/>
	</RelativeLayout>
</LinearLayout>
