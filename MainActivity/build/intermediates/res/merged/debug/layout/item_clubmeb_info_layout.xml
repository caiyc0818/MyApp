<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者端-好友列表 item布局 layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <com.bcinfo.tripaway.view.image.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/club_meb_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/user_defult_photo"
            imagecontrol:border_inside_color="@color/white"
            imagecontrol:border_thickness="0dip" />
        <!-- 好友  姓名和籍贯 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" >

            <LinearLayout
                android:id="@+id/liear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_meb_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="100dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_meb_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_meb_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/liear"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_clubmeb_info_bg"
                android:text="联系TA"
                android:textColor="@color/gray_text"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#dcdcdc"
        android:layout_marginLeft="40dp" />

</LinearLayout>