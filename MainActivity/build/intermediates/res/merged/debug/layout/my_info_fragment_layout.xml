<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bcinfo.tripaway.view.ScrollView.PersonInfoScrollView
        android:id="@+id/product_detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" >

            <ImageView
                android:id="@+id/personpic"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clubmeb_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#30000000" />

            <LinearLayout
                android:id="@+id/product_layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                     android:layout_marginTop="55dp"
                    android:paddingBottom="35dp" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" >

                        <com.bcinfo.tripaway.view.image.RoundImageView
                            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/personal_icon"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_defult_photo"
                            imagecontrol:border_inside_color="@color/white"
                            imagecontrol:border_thickness="2dip" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|right"
                            android:id="@+id/change_avator_tv"
                            android:src="@drawable/change_avator" >
                        </ImageView>
                    </FrameLayout>

                    <com.bcinfo.tripaway.view.textview.MoreBoldTfTextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:text="11"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:id="@+id/focus_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white" >
                        </View>

                        <LinearLayout
                            android:id="@+id/fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="粉丝"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:id="@+id/fans_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:ellipsize="end"
                            android:maxWidth="200dp"
                            android:singleLine="true"
                            android:text="这个人很懒，什么都没留下！"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/search_separate_view_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/my_travel_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <ImageView
                            android:id="@+id/travel_pic"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/my_trip1" />

                        <com.bcinfo.tripaway.view.textview.NormalTfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/travel_pic"
                            android:text="我的旅程"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <com.bcinfo.tripaway.view.textview.NormalTfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/my_travel_more"
                            android:text="全部旅程"
                            android:textColor="#999999"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/my_travel_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/right_arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E6E6E6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/pay_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/will_pay" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:id="@+id/will_pay_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/red_circle_bg"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="待支付"
                                android:textSize="13sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/leave_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/will_leave" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:id="@+id/will_leave_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/red_circle_bg"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="待出行"
                                android:textSize="13sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/evalute_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/will_evalute" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:id="@+id/will_evalute_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/red_circle_bg"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="待评价"
                                android:textSize="13sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_schedule_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/cxd" />

                                <View
                                    android:id="@+id/myScheduleimTip"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="top|center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/shape_red_oval_small"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="出行单"
                                android:textSize="13sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/search_separate_view_color"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/my_fas_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/my_fas_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fas" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_fas_img"
                        android:gravity="center_vertical"
                        android:text="我的账户"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/fas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toLeftOf="@+id/right"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/my_cashCoupon_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/my_cashCoupon_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cashcoupon" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_cashCoupon_img"
                        android:gravity="center_vertical"
                        android:text="我的现金券"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/myCashCouponim"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:id="@+id/myCashCouponTip"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/myCashCouponim"
                        android:background="@drawable/shape_red_oval_small"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/search_separate_view_color" />

                <RelativeLayout
                    android:id="@+id/my_blog_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/my_blog_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_blog1" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_blog_img"
                        android:gravity="center_vertical"
                        android:text="晒图/连载"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/my_store_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/my_store__img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_store1" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_store__img"
                        android:gravity="center_vertical"
                        android:text="我的收藏"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />

                <RelativeLayout
                    android:id="@+id/my_customize_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/my_customize_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_customizs1" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_customize_img"
                        android:gravity="center_vertical"
                        android:text="我的定制"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/search_separate_view_color" />

                

                <RelativeLayout
                    android:id="@+id/my_custominfo_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/my_custominfo_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/common_info1" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/common_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_toRightOf="@+id/my_custominfo_img"
                        android:gravity="center_vertical"
                        android:text="常用信息"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/search_separate_view_color" />
            </LinearLayout>
        </RelativeLayout>
    </com.bcinfo.tripaway.view.ScrollView.PersonInfoScrollView>
<RelativeLayout
        android:id="@+id/layout_product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

          <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/setting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/setting1"
        android:gravity="center_vertical"
         />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/user_edit_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/user_edit"
        android:gravity="center_vertical"
        />
    </RelativeLayout>
    
</RelativeLayout>