<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lodging_service_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- top页面 -->
    <ImageView
        android:id="@+id/lodging_item_ImageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/ic_launcher"
        android:scaleType="centerCrop" />
    <!-- item信息 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:padding="5dp">

            <!-- item  name -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/lodging_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocean View MaliBu HideAway"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- item extra infos -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:paddingBottom="10dp"
            android:paddingLeft="5dp" >

            <!-- item  first -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/lodging_item_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整套公寓"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            
            <!-- point -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView 
                android:id="@+id/point_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            
            <!-- item second -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/lodging_item_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1间卧室"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            
            <!-- point -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView 
                android:id="@+id/point_secomd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                 android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            
            <!-- item third -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/lodging_item_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5位房客"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            
			 <!-- point -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView 
                android:id="@+id/point_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                 android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            
            <!-- item fourth -->
            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/lodging_item_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5张床"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>