<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip" >

        <LinearLayout
            android:layout_width="15dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#16c98d" />
                <!-- android:layout_centerInParent="true" -->

                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dip"
                    android:src="@drawable/kongxinyuan" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                
                android:orientation="horizontal" >

                <!-- <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/trip_item_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="第一天:"
                    android:textColor="@color/black"
                    android:textSize="16sp" /> -->

                <com.bcinfo.tripaway.view.textview.BoldTfTextView
                    android:id="@+id/trip_item_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:text="全国各地清迈"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/work_list_item_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_right"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/work_list_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dip"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
        			android:ellipsize="end"
                    android:text="通知通知通知通知通知通知通知通知通知"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- 存放景点照片的线性布局 -->

            <LinearLayout
                android:id="@+id/scenic_spots_photo_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                 >
            </LinearLayout>
            <View 
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>