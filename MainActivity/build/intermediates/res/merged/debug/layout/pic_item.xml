<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="175dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/photo_bg"
        android:background="@color/gray_bg"
        >
    <com.bcinfo.tripaway.view.image.RoundImageView
        android:layout_marginTop="10dp"
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/goldmedal_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_defult_photo"
        app:border_inside_color="@color/white"
        app:border_thickness="0dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
    <com.bcinfo.tripaway.view.textview.NormalTfTextView 
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:id="@+id/goldmedal_name"
        />
    
    	<ImageView 
    	    android:layout_centerInParent="true"
    	    android:layout_toRightOf="@id/goldmedal_name"
    	    android:id="@+id/gold_pic"
    	    android:src="@drawable/gold_pic"
    	    android:layout_width="20dp"
    	    android:layout_height="20dp"
    	    android:scaleType="centerInside"
    	    android:visibility="gone"
    	    />
    </RelativeLayout>
     <com.bcinfo.tripaway.view.textview.NormalTfTextView 
          android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:textSize="12sp"
        android:textColor="@color/gray_text"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
         android:gravity="center_horizontal"
        android:id="@+id/goldmedal_intro"
        />
     
      <com.bcinfo.tripaway.view.textview.NormalTfTextView 
         android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
          android:textSize="13sp"
          android:layout_marginBottom="10dp"
        android:textColor="@color/gray_text"
         android:gravity="center_horizontal"
        android:id="@+id/goldmedal_count"
        />
      </LinearLayout>
      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          >
          <com.bcinfo.tripaway.view.textview.NormalTfTextView 
              android:id="@+id/goldmedal_add"
              android:text="+关注"
              android:layout_width="72dp"
              android:textSize="12sp"
              android:layout_marginTop="13dp"
              android:layout_height="26dp"
              android:gravity="center"
              android:textColor="@color/black"
              android:layout_centerInParent="true"
              android:background="@drawable/gray_border_transparent_bg"
              />
      </RelativeLayout>
</LinearLayout>