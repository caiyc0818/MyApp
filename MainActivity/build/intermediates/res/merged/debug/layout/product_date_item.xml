<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/begindate_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="2015/07/09"
            android:textColor="@color/gray"
            android:textSize="@dimen/detail_content_title_size" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/enddate_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="2015/07/10"
            android:textColor="@color/gray"
            android:textSize="@dimen/detail_content_title_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/enddate_txt"
            android:layout_toRightOf="@+id/begindate_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/day_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10å¤©"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp" 
                android:background="@color/gray"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>