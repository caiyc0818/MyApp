<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/associate_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/associate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杨乃文"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_text"
            android:textSize="15sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/associate_id_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/associate_name"
            android:layout_marginTop="10dp"
            android:text="身份证号： "
            android:textColor="@color/gray_text"
            android:textSize="11sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/associate_id_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/associate_id_num_txt"
            android:layout_toLeftOf="@+id/delete"
            android:layout_toRightOf="@+id/associate_id_num_txt"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="3203958783929005320395878392900532039587839290053203958783929005"
            android:textColor="@color/gray_text"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/deleteass" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/papers_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/associate_id_num_txt"
            android:layout_marginTop="10dp"
            android:text="护照号： "
            android:textColor="@color/gray_text"
            android:textSize="11sp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/papers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/papers_num_txt"
            android:layout_toLeftOf="@+id/delete"
            android:layout_toRightOf="@+id/papers_num_txt"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="32039587839290053203958783929005320395878392900532039587839290053203958783929005"
            android:textColor="@color/gray_text"
            android:textSize="11sp" />
    </RelativeLayout>

</LinearLayout>