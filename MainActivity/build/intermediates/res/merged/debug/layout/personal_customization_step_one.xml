<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者端-个人定制第一步布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
    
    
    
  <RelativeLayout
        android:id="@+id/second_title"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="fill_parent"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/back_button_height"
                android:layout_height="@dimen/back_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/nav_back"
                android:gravity="center" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/second_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:layout_toRightOf="@id/layout_back_button"
            android:gravity="center"
            android:singleLine="true"
            android:text="发布定制"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="12.5dp"
                        android:layout_height="17.5dp"
                        android:src="@drawable/from" >
                    </ImageView>

                    <ImageView
                        android:layout_width="6.5dp"
                        android:layout_height="17.5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/from_to_arrow" >
                    </ImageView>

                    <ImageView
                        android:layout_width="14.5dp"
                        android:layout_height="17.5dp"
                        android:src="@drawable/to" >
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="从哪出发"
                                android:textColor="@color/dark_gray"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:background="#a3a3a3" >
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:id="@+id/from"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请选择"
                                     android:id="@+id/from_text"
                                android:textColor="@color/gray_text"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="12.5dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/list_arrow" >
                            </ImageView>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/gray_border"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="去哪儿玩"
                                android:textColor="@color/dark_gray"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:background="#a3a3a3" >
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:id="@+id/to"
                            android:orientation="horizontal" >

                            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请选择"
                                android:id="@+id/to_text"
                                android:textColor="@color/gray_text"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="12.5dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/list_arrow" >
                            </ImageView>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想玩多少（天）"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />

                <include layout="@layout/include_trip_time" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="出发日期"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:id="@+id/date"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                     android:id="@+id/dateTextView"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="12.5dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/list_arrow" >
                    </ImageView>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成人人数"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />

                <include layout="@layout/include_adult_num" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray_border"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="儿童人数"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />

                <include layout="@layout/include_children_num" />
            </LinearLayout>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/nextStep"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_border"
                    android:text="继续下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/homepage_text_size_four" >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>