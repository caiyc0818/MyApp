<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_radiogroup_root"
        android:layout_width="match_parent"
        android:layout_height="52dp" >

        <RadioGroup
            android:id="@+id/tab_radioGroup_text_root"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_1_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:text="资料"
                android:textColor="@color/black"
                android:textSize="@dimen/homepage_text_size_two" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#a3a3a3" >
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_2_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:text="产品"
                android:textColor="@color/black"
                android:textSize="@dimen/homepage_text_size_two" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#a3a3a3" >
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_3_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="2dp"
                android:text="游记"
                android:textColor="@color/black"
                android:textSize="@dimen/homepage_text_size_two" />
        </RadioGroup>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#1cce70" >
        </ImageView>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>