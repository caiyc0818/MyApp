<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <!-- 自定义PullScrollView控件属性 -->
    <declare-styleable name="PullScrollView">
        <attr name="header" format="reference" />
        <attr name="headerHeight" format="dimension" />
        <attr name="headerVisibleHeight" format="dimension" />
    </declare-styleable>

     <!-- 自定义ImageView控件属性 -->
    <declare-styleable name="CircularImage">  
       <attr name="border_width" format="dimension" />  
       <attr name="border_color" format="color" />  
   </declare-styleable>
   <!-- 自定义FancyOverFlow控件属性 -->
   <declare-styleable name="FancyCoverFlow">
       <attr name="actionDistance" format="integer"></attr>
       <attr name="scaleDownGravity" format="float"></attr>
       <attr name="maxRotation" format="integer"></attr>
       <attr name="unselectedAlpha" format="float"></attr>
       <attr name="unselectedSaturation" format="float"></attr>
       <attr name="unselectedScale" format="float"></attr>
   </declare-styleable>
       <declare-styleable name="SwipeLayout">
        <attr name="drag_edge" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0"/>
            <enum name="pull_out" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="Emojicon">
        <attr name="emojiconSize" format="dimension"/>
        <attr name="emojiconTextStart" format="integer"/>
        <attr name="emojiconTextLength" format="integer"/>
        <attr name="emojiconUseSystemDefault" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SlideBottomPanel">
        <attr name="sbp_background_layout" format="reference"/>
        <attr name="sbp_title_height_no_display" format="dimension"/>
        <attr name="sbp_panel_height" format="dimension"/>
        <attr name="sbp_boundary" format="boolean"/>
        <attr name="sbp_move_distance_trigger" format="dimension"/>
        <attr name="sbp_animation_duration" format="integer"/>
        <attr name="sbp_fade" format="boolean"/>
        <attr name="sbp_hide_panel_title" format="boolean"/>
    </declare-styleable>
</resources>

