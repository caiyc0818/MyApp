<?xml version="1.0" encoding="utf-8"?>
<!-- 定义 微游记-发布布局界面 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/trip_blog_publish_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 导入微游记-发布 标题栏 -->

        <include layout="@layout/square_publish_title" />

        <LinearLayout
            android:id="@+id/trip_blog_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <!-- GridView 网格列表 -->

            <GridView
                android:id="@+id/trip_blogPhoto_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:horizontalSpacing="10dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:overScrollMode="never"
                android:verticalSpacing="10dp"
                android:visibility="gone" />
            <!-- 照片添加描述 -->

            <EditText
                android:id="@+id/trip_edit_photoDescript"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="left|top"
                android:hint="写下你的分享"
                android:maxLength="140"
                android:singleLine="false"
                android:textColor="@color/color_trip_blog_photoDescript"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 空白分隔条 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/hot_topic_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/blog_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="加入热门话题："
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_hot_topic_bg"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/fire" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="#寻找爱的冒险#"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#efefef" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/fire" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="#老子就爱吃#"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#efefef" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/fire" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="#想要的生活#"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#efefef" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/fire" />

                                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="#你丫神经病#"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/hot_topic_linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_square_tag"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp" >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="14.7dp"
                            android:src="@drawable/square_pic_location" >
                        </ImageView>

                        <com.bcinfo.tripaway.view.textview.NormalTfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="显示位置"
                            android:textColor="#96bdeb"
                               android:layout_marginLeft="2dp"
                            android:textSize="12sp" >
                        </com.bcinfo.tripaway.view.textview.NormalTfTextView>
                    </LinearLayout>
                    
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_square_tag"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp" >

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/square_pic_public" >
                        </ImageView>

                        <com.bcinfo.tripaway.view.textview.NormalTfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="公开"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" >
                        </com.bcinfo.tripaway.view.textview.NormalTfTextView>
                    </LinearLayout>
                </RelativeLayout>

                <include layout="@layout/include_square_serial" />
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
    <!-- 半透明的背景色 -->

    <FrameLayout
        android:id="@+id/trip_blog_publish_fullTransParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_gray"
        android:visibility="gone" >
    </FrameLayout>
    <!-- 导入抽屉 -->

    <include
        layout="@layout/trip_addphoto_slidingdrawer2"
        android:visibility="gone" />

</FrameLayout>