<?xml version="1.0" encoding="utf-8"?>
<!-- 定义 微游记-发布布局界面 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="11dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:src="@drawable/square_location" >
            </ImageView>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="南京市印象中国咖啡厅"
                android:textColor="@color/gray_text"
                android:textSize="12sp" >
            </com.bcinfo.tripaway.view.textview.NormalTfTextView>
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1分钟前连载"
            android:textColor="@color/gray_text"
            android:textSize="12sp" >
        </com.bcinfo.tripaway.view.textview.NormalTfTextView>
    </RelativeLayout>

    <com.wefika.flowlayout.FlowLayout
        android:id="@+id/interest_tag_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp" />

    <EditText
        android:id="@+id/trip_edit_photoDescript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="记录你的点点滴滴"
        android:maxLength="140"
        android:padding="10dp"
        android:singleLine="false"
        android:textColor="@color/color_trip_blog_photoDescript"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14sp" />

</LinearLayout>