                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/square"
                android:button="@null"
                android:gravity="center"
                android:text="13"
                android:textColor="@color/dark_gray" />
