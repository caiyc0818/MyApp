<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_radiogroup_root"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/green_bottom_border_bg"
                    android:gravity="center"
                    android:text="主页"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>
             <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_action"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="活动"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_travels"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="游记"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </RelativeLayout>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/club_trends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="动态"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/club_products"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="产品"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>
    -->

    <FrameLayout
        android:id="@+id/content_frame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>