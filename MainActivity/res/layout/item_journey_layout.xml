<?xml version="1.0" encoding="utf-8"?>
<!-- 服务者发布的产品列表item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_travel_info_item_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageGone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/map_bg"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/journey_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="川藏"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经历了"
                        android:textColor="#66667c"
                        android:textSize="14sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/expTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:text="3"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅程"
                        android:textColor="#66667c"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/desc_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/quotation" />

                <com.bcinfo.tripaway.view.TextView1
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="很专业，很风趣的一个菇凉。为人热情诚恳，深得游客的喜爱。"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/show_all_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="显示更多"
                android:textColor="#4a90e5"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9" >
    </View>

    <com.bcinfo.tripaway.view.MyListView
        android:id="@+id/fellowship_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </com.bcinfo.tripaway.view.MyListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="17dp"
            android:background="#d9d9d9" >
        </View>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/show_all_fellowship_refer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:text="查看全部"
            android:textColor="#999999"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>