<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_linearlayout"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/reviewRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_review_relative" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/review2x" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:text="说点什么吧"
            android:textColor="@color/gray"
            android:textSize="14dp" />

        <View
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/textView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zanrelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/nozan" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image1"
            android:text=" 赞 "
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/tv_zannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_zan"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shareRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/image3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_toLeftOf="@+id/tv_share"
            android:src="@drawable/sharenew" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text=" 分享"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>