<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_house_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/scenic_flag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/house_photo"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:scaleType="centerCrop" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/house_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:lineSpacingExtra="5dip"
            android:text="洛杉矶国际影城"
            android:textColor="@color/gray_more"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/address" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="价格"
                android:textColor="@color/gray_more"
                android:textSize="14sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <!-- <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="(资源价格)"
                android:textColor="@color/gray_more"
                android:textSize="16sp" /> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/house_type" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="床型"
                android:textColor="@color/gray_more"
                android:textSize="14sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/in_out_time" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="人数"
                android:textColor="@color/gray_more"
                android:textSize="14sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img4"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/occupancy" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="地址"
                android:textColor="@color/gray_more"
                android:textSize="14sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img5"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/toilet" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="时间"
                android:textColor="@color/gray_more"
                android:textSize="14sp" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </LinearLayout>
		<com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/grid_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="车内配套"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />

        <com.bcinfo.tripaway.view.MyGridView
            android:id="@+id/grid1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="10dp" >
        </com.bcinfo.tripaway.view.MyGridView>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/grid_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="费用范围"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />

        <com.bcinfo.tripaway.view.MyGridView
            android:id="@+id/grid2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="10dp" >
        </com.bcinfo.tripaway.view.MyGridView>

        <com.bcinfo.tripaway.view.MyListView
            android:id="@+id/house_detail_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="1px"
            android:listSelector="@color/transparent"
            android:scrollbars="none" >
        </com.bcinfo.tripaway.view.MyListView>
    </LinearLayout>

</LinearLayout>