<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg" >

        <LinearLayout
            android:id="@+id/layout_back_button"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/button_selector_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/back_button_height"
                android:layout_height="@dimen/back_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/nav_back"
                android:gravity="center" />
        </LinearLayout>

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="企业信息"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.bcinfo.tripaway.view.image.RoundImageView
                        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/company_icon"
                        android:layout_width="@dimen/detail_author_photo_size"
                        android:layout_height="@dimen/detail_author_photo_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user_defult_photo"
                        imagecontrol:border_inside_color="@color/white"
                        imagecontrol:border_thickness="4dip" />

                    <ImageView
                        android:id="@+id/personal_company_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:src="@drawable/company_v_icon" />
                </FrameLayout>
            </LinearLayout>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/company_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="川藏老兵"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/conpany_hp_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:text="旅行社"
                    android:textColor="@color/white" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/conpany_hp_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape"
                    android:text="汽车租赁"
                    android:textColor="@color/white" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/conpany_hp_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape"
                    android:text="汽车租赁"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/up_arrow_line" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="手感好和服务和服务服务呢恶搞手感好和服务和服务服务呢恶搞手感好和服务和服务服务iwefiowehwe呢恶搞手感好和服务和服务服务iwefiowehwe呢恶搞手感好和服务和服务服务iwefiowehwe呢恶搞" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_bg" />

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="远行认证信息"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称："
                        android:textColor="#696969"
                        android:textSize="15sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/company_hp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="范冰冰"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成立时间："
                        android:textColor="#696969"
                        android:textSize="15sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/company_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2003.9"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业地址："
                        android:textColor="#696969"
                        android:textSize="15sp" />

                    <com.bcinfo.tripaway.view.textview.NormalTfTextView
                        android:id="@+id/company_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1987-04-23"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" >

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="发布的产品"
                    android:textSize="18sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="("
                    android:textSize="18sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:id="@+id/company_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="4"
                    android:textSize="18sp" />

                <com.bcinfo.tripaway.view.textview.NormalTfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text=")"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.bcinfo.tripaway.view.MyListView
                    android:id="@+id/company_product_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@color/gray_border"
                    android:dividerHeight="0px"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:visibility="visible" >
                </com.bcinfo.tripaway.view.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>