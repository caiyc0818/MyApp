<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <!-- 左边 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="@dimen/border_width"
            android:layout_height="10dip"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_border" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/gray_circle" />

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="@dimen/border_width"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_border" />
    </LinearLayout>
     <!-- 右边 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >
        <!-- 行程景点照片 -->
        <ImageView
            android:id="@+id/trip_scenic_photo"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_marginTop="10dip"
            android:scaleType="centerCrop"
            android:src="@drawable/gray_circle" />
       <!-- 行程景点介绍 -->
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/trip_scenic_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingExtra="5dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="@color/gray_more"
            android:textSize="@dimen/detail_content_size" />
        <!-- 分隔线 -->
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_border" />
    </LinearLayout>

</LinearLayout>