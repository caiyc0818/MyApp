<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/order_product_logo"
        android:layout_width="61dip"
        android:layout_height="48dip"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip" >

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/order_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:maxLines="1"
            android:background="@color/white"
            android:text="搜索"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/order_user_photo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_defult_photo" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/user_photo_ring" />
            </FrameLayout>

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/order_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>