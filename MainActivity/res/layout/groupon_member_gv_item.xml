<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/press_white_to_gray_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
           <com.bcinfo.tripaway.view.image.RoundImageView
        android:id="@+id/groupon_user_photo"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:src="@drawable/user_defult_photo" />
        <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/group_cust_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:text=""
        android:textSize="10sp"/>
 
</FrameLayout>
    <com.bcinfo.tripaway.view.textview.NormalTfTextView
        android:id="@+id/groupon_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text="john"
        android:singleLine="true"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        android:visibility="visible" />

</LinearLayout>