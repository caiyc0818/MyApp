<?xml version="1.0" encoding="utf-8"?>
<!-- 发现-目的地产品列表item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_discovery_location_products_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 在这个线性布局中定义一个ImageView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_discovery_location_products_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:scaleType="centerCrop" />
        <!-- 自定义ImageView显示服务者头像 -->

        <com.bcinfo.tripaway.view.image.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/items_discovery_location_products_servicerIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-25dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dip"
            android:orientation="vertical" >

            <!-- 显示产品的价格 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/items_discovery_location_products_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_gray"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="￥3,888"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 定义一个相对布局 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dip"
        android:layout_marginTop="-25dip"
        android:padding="10dp" >

        <!-- 旅游产品标题 -->

        <com.bcinfo.tripaway.view.textview.NormalTfTextView
            android:id="@+id/title_item_discovery_location_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/shadow_black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title_item_discovery_location_products"
            android:layout_below="@id/title_item_discovery_location_products"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <!-- 线路 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/discovery_item_route"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="@string/trip_route"
                android:textColor="@color/shadow_gray"
                android:textSize="15sp" />
            <!-- 圆点 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/dot"
                android:textColor="@color/shadow_gray" />
            <!-- 车辆 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/discovery_item_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="@string/trip_car"
                android:textColor="@color/shadow_gray"
                android:textSize="15sp" />
            <!-- 圆点 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/dot"
                android:textColor="@color/shadow_gray" />
            <!-- 评论数量 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/items_discovery_location_products_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/trip_comments"
                android:textColor="@color/shadow_gray"
                android:textSize="15sp" />
            <!-- 圆点 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:singleLine="true"
                android:text="@string/dot"
                android:textColor="@color/shadow_gray" />
            <!-- 产品服务商 -->

            <com.bcinfo.tripaway.view.textview.NormalTfTextView
                android:id="@+id/items_discovery_location_products_servicerName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/shadow_gray"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>